==================== DATABASE ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentiment_db
DB_USER=sentiment_user
DB_PASSWORD=your_secure_password_here

==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

==================== KAFKA ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=sentiment-processor-group
KAFKA_TOPIC=feedback-events
KAFKA_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

==================== SPRING BOOT ====================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

==================== JWT SECURITY ====================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRATION=86400000

==================== ELASTICSEARCH ====================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/sentiment-engine/app.log

==================== FEATURE FLAGS ====================
FEATURE_DRIVER_FEEDBACK=true
FEATURE_TRIP_FEEDBACK=true
FEATURE_APP_FEEDBACK=true
FEATURE_MARSHAL_FEEDBACK=false

==================== ALERTS ====================
ALERT_THRESHOLD_SENTIMENT=2.5
ALERT_COOLDOWN_MINUTES=120
ALERT_CRITICAL_THRESHOLD=1.5

==================== CACHING ====================
CACHE_TTL_MINUTES=60
CACHE_MAX_SIZE=1000

==================== CORS ====================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080